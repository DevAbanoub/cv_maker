<%- if controller_name != t(".sessions") %>
  <%= link_to t(".login"), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != t(".registrations") %>
  <%= link_to t(".sign_up"), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != t(".passwords") &&
  controller_name != t(".registrations") %>

  <%= link_to t(".forgot_pwd"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != t(".confirmations") %>
  <%= link_to t(".dont_receive_confirm"),
    new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? &&
  resource_class.unlock_strategy_enabled?(:email) &&
  controller_name != t(".unlocks") %>

  <%= link_to t(".dont_receive_unlock"), new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t(".authenticated", OmniAuth::Utils.camelize(provider)),
      omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
