<%= form_for resource, as: resource_name, url: registration_path(resource_name),
  html: {class: "form-horizontal"} do |f| %>
  <%= field_set_tag  t(".title") do %>
    <% if !resource.errors.empty? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
    <% end %>
    <br>
    <div class="form-group">
      <%= f.label :email, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.password_field :password, autocomplete: "off",
          class: "form-control" %>
        <% if @minimum_password_length %>
        <p class="help-block">
          <%= @minimum_password_length.to_s + t(".pwd_minimum") %>
        </p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="controls col-md-10 col-md-offset-2">
        <%= f.submit t(".submit"), class: "btn btn-success" %>

        <%= link_to t(".login"), new_session_path(resource_name),
          class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>
<% end %>
