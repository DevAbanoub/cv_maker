<%= form_for resource, as: resource_name, url: password_path(resource_name),
  html: {class: "form-horizontal", method: :put} do |f| %>
  <%= field_set_tag  t(".title") do %>
    <% if !resource.errors.empty? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
    <% end %>
    <%= f.hidden_field :reset_password_token %>

    <div class="control-group">
      <%= f.label :password, t(".new_pwd"), class: "control-label" %>
      <div class="controls">
        <%= f.password_field :password, autocomplete: "off",
          class: "input-xlarge" %>
        <% if @minimum_password_length %>
        <p class="help-block">
          <%= @minimum_password_length.to_s + t(".pwd_minimum") %>
        </p>
        <% end %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, t(".pwd_confirm"),
        class: "control-label" %>
      <div class="controls">
        <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "input-xlarge" %>
      </div>
    </div>
    <br>
    <div class="control-group">
      <div class="controls">
        <%= f.submit t(".submit"), class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render "users/shared/links" %>
