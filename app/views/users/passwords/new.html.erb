<%= form_for resource, as: resource_name, url: password_path(resource_name),
  html: {class: "form-horizontal", method: :post} do |f| %>
  <%= field_set_tag  t(".title") do %>
    <% if !resource.errors.empty? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
    <% end %>
    <br>
    <div class="form-group">
      <%= f.label :email, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="controls col-md-10 col-md-offset-2">
        <%= f.submit t(".submit"), class: "btn btn-success" %>
      </div>
    </div>

    <div class="form-group">
      <div class="controls col-md-10 col-md-offset-2">
        <%= link_to t(".login"), new_session_path(resource_name),
          class: "btn btn-primary" %>
      </div>
    </div>

    <div class="form-group">
      <div class="controls col-md-10 col-md-offset-2">
        <%= link_to t(".sign_up"), new_registration_path(resource_name) %>
      </div>
    </div>

  <% end %>
<% end %>
