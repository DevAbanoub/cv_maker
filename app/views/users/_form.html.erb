<%= form_for user do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize user.errors.count, t(".error") %></h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user do |f| %>
        <%= f.label :user_name, t(".user_name") %>
        <%= f.text_field :user_name, class: "form-control" %>

        <%= f.label :password_digest, t(".password_digest") %>
        <%= f.password_field :password_digest, class: "form-control" %>

        <%= f.label :first_name, t(".first_name") %>
        <%= f.text_field :first_name, class: "form-control" %>

        <%= f.label :last_name, t(".last_name") %>
        <%= f.text_field :last_name, class: "form-control" %>
        <br />
        <%= f.submit t(".submit_btn"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
