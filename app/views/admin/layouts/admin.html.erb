<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin", media: "all" %>
    <%= javascript_include_tag "admin" %>
    <%= render "layouts/shim" %>
  </head>

  <body>
    <div id="wrapper">
      <%= render "admin/layouts/header" %>
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <h1 class="page-header">
                <%= page_header %>
              </h1>
              <%= yield :breadcrumb %>
            </div>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
